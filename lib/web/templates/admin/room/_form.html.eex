<div class="box">
  <div class="box-header">
    <h3 class="box-title"><%= @title %></h3>
  </div>

  <%= form_for @changeset, @path, fn (f) -> %>
    <div class="box-body">
      <div class="form-group">
        <%= label f, :name %>
        <%= text_input f, :name, class: "form-control" %>
        <%= error_tag f, :name %>
      </div>

      <div class="form-group">
        <%= label f, :description %>
        <%= textarea f, :description, class: "form-control", rows: 5 %>
        <%= error_tag f, :description %>
      </div>

      <div class="form-group">
        <%= label f, :x %>
        <%= text_input f, :x, class: "form-control" %>
        <%= error_tag f, :x %>
      </div>

      <div class="form-group">
        <%= label f, :y %>
        <%= text_input f, :y, class: "form-control" %>
        <%= error_tag f, :y %>
      </div>

      <div class="form-group">
        <%= label f, :north_id %>
        <%= select f, :north_id, Zone.room_exits(), prompt: "Select room", class: "form-control" %>
        <%= error_tag f, :north_id %>
      </div>

      <div class="form-group">
        <%= label f, :east_id %>
        <%= select f, :east_id, Zone.room_exits(), prompt: "Select room", class: "form-control" %>
        <%= error_tag f, :east_id %>
      </div>

      <div class="form-group">
        <%= label f, :south_id %>
        <%= select f, :south_id, Zone.room_exits(), prompt: "Select room", class: "form-control" %>
        <%= error_tag f, :south_id %>
      </div>

      <div class="form-group">
        <%= label f, :west_id %>
        <%= select f, :west_id, Zone.room_exits(), prompt: "Select room", class: "form-control" %>
        <%= error_tag f, :west_id %>
      </div>
    </div>

    <div class="box-footer">
      <%= submit @submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

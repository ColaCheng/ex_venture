<section class="content-header">
  <h1>
    <%= @user.name %>
  </h1>

  <ol class="breadcrumb">
    <li>
      <%= link(to: dashboard_path(@conn, :index)) do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li><%= link("Users", to: user_path(@conn, :index)) %></li>
    <li><%= link(@user.name, to: user_path(@conn, :show, @user.id)) %></li>
    <li class="active">Edit</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= render "_form.html", path: user_path(@conn, :update, @user.id), changeset: @changeset, title: "Edit", submit: "Update" %>
    </div>
  </div>
</section>

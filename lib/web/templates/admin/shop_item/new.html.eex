<section class="content-header">
  <h1>
    Add Item
  </h1>

  <ol class="breadcrumb">
    <li>
      <%= link(to: dashboard_path(@conn, :index)) do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li><%= link("Zones", to: zone_path(@conn, :index)) %></li>
    <li><%= link(@room.zone.name, to: zone_path(@conn, :show, @room.zone.id)) %></li>
    <li><%= link(@room.name, to: room_path(@conn, :show, @room.id)) %></li>
    <li><%= link(@shop.name, to: shop_path(@conn, :show, @shop.id)) %></li>
    <li class="active">Add Item</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <%= render "_form.html", path: shop_shop_item_path(@conn, :create, @shop.id), items: @items, changeset: @changeset, title: "Add Item", submit: "Create" %>
    </div>
  </div>
</section>

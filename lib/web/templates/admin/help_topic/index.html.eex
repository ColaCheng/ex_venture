<section class="content-header">
  <h1>
    Help Topics
  </h1>

  <ol class="breadcrumb">
    <li>
      <%= link(to: dashboard_path(@conn, :index)) do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li class="active">Help Topics</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header">
          <div class="box-tools">
            <%= link("New Help Topic", to: help_topic_path(@conn, :new), class: "btn btn-primary") %>
          </div>
        </div>
        <div class="box-body">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Keywords</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <%= Enum.map @help_topics, fn (help_topic) -> %>
                <tr>
                  <td><%= help_topic.id %></td>
                  <td><%= link(help_topic.name, to: help_topic_path(@conn, :show, help_topic.id)) %></td>
                  <td><%= help_topic.keywords |> Enum.join(", ") %></td>
                  <td>
                    <%= link("View", to: help_topic_path(@conn, :show, help_topic.id)) %>
                    <%= link("Edit", to: help_topic_path(@conn, :edit, help_topic.id)) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= render(SharedView, "_pagination.html", path: help_topic_path(@conn, :index), pagination: @pagination) %>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= @title %></h3>
  </div>

  <%= form_for @changeset, @path, [class: "form-horizontal"], fn (f) -> %>
    <div class="box-body">
      <div class="form-group">
        <%= label f, :proficiency_id, class: "col-md-4" %>
        <div class="col-md-8">
          <%= select f, :proficiency_id, @proficiencies |> Enum.map(&({&1.name, &1.id})), class: "form-control" %>
          <%= error_tag f, :proficiency_id %>
        </div>
      </div>

      <%= FormView.number_field(f, :level) do %>
        <%= Help.get("class_proficiency.level") %>
      <% end %>

      <%= FormView.number_field(f, :ranks) do %>
        <%= Help.get("class_proficiency.ranks") %>
      <% end %>
    </div>

    <div class="box-footer">
      <%= submit @submit, class: "btn btn-primary pull-right" %>
    </div>
  <% end %>
</div>
